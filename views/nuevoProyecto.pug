extends layout 

block main 
    .contenido-principal 
        h1 nombrePagina

        if errores
            each error in errores
                .alerta= error.texto 
        
        form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
            .campo  
                label(for="nombre") Nombre Proyecto 
                input(type="text" name="nombre" placeholder="Nombre Proyecto")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")